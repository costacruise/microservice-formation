  "Resources": {
    "WebServerGroup": {
      "Type": "AWS::AutoScaling::AutoScalingGroup",
      "Properties": {
        "AvailabilityZones": {
          "Fn::GetAZs": ""
        },
        "LaunchConfigurationName": {
          "Ref": "LaunchConfig"
        },
        "MinSize": {
          "Ref": "MinSize"
        },
        "MaxSize": {
          "Ref": "MaxSize"
        },
        "LoadBalancerNames": [{
          "Ref": "ElasticLoadBalancer"
        }],
        "Tags": [{
          "PropagateAtLaunch" : "true",
          "Key": "Microservice",
          "Value": {
            "Ref": "Microservice"
          }
        }, {
          "PropagateAtLaunch" : "true",
          "Key": "Purpose",
          "Value": "Microservice"
        }, {
          "PropagateAtLaunch" : "true",
          "Key": "MicroserviceApiVersion",
          "Value": {
            "Ref": "MicroserviceApiVersion"
          }
        }, {
          "PropagateAtLaunch" : "true",
          "Key": "Environment",
          "Value": {
            "Ref": "Environment"
          }
        }, {
          "PropagateAtLaunch" : "true",
          "Key": "Name",
          "Value": {
            "Ref": "AWS::StackName"
          }
        }]
      },
      "CreationPolicy": {
        "ResourceSignal": {
          "Timeout": "PT15M",
          "Count": "1"
        }
      },
      "UpdatePolicy": {
        "AutoScalingRollingUpdate": {
          "MinInstancesInService": "1",
          "MaxBatchSize": "1",
          "PauseTime": "PT15M",
          "WaitOnResourceSignals": "true"
        }
      }
    },

    "LaunchConfig": {
      "Type": "AWS::AutoScaling::LaunchConfiguration",
      "Metadata": {
        "Comment": "Install a simple application",
        "AWS::CloudFormation::Init": {
          "config": {
            "packages": {
              "yum": {
                "gcc-c++": [],
                "make": [],
                "git": []
              }
            }
          }
        }
      },
      "Properties": {
        "KeyName": {
          "Ref": "KeyName"
        },
        "ImageId": {
          "Fn::FindInMap": ["AWSRegionArch2AMI", {
            "Ref": "AWS::Region"
          }, {
            "Fn::FindInMap": ["AWSInstanceType2Arch", {
              "Ref": "InstanceType"
            }, "Arch"]
          }]
        },
        "SecurityGroups": [{
          "Ref": "InstanceSecurityGroup"
        }],
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": ["", [
              "#!/bin/bash -xe\n",
              "exec > >(tee /var/log/user-data.log|logger -t user-data -s 2>/dev/console) 2>&1\n",
              "yum update -y aws-cfn-bootstrap\n",

              "/opt/aws/bin/cfn-init -v ",
              "         --stack ", {
                "Ref": "AWS::StackName"
              },
              "         --resource LaunchConfig ",
              "         --region ", {
                "Ref": "AWS::Region"
              }, "\n",

              "echo '* hard nofile 100000' | tee -a /etc/security/limits.conf\n",
              "echo '* soft nofile 100000' | tee -a /etc/security/limits.conf\n",
              "ulimit -n 100000\n",

              "yum install -y nodejs-0.10.33 npm-1.3.6 --enablerepo=epel\n",
              "npm install -g naught@1.5.0\n",
              "mkdir /microservice\n",
              "mkdir /microservice/origin\n",
              "ln -s /microservice/origin /microservice/current\n",
              "curl -u ", { "Ref": "GitHubAccessToken" }  , ":x-oauth-basic -L https://github.com/", { "Ref": "GitHubRepository" }  ,"/archive/master.tar.gz > /microservice/origin.tar.gz\n",
              "tar -xzf /microservice/origin.tar.gz --directory /microservice/origin --strip-components=1\n",
              "rm /microservice/origin.tar.gz\n",
              "cd /microservice/origin\n",
              "npm install --production \n",
              "chown -R ec2-user /microservice\n",
              "chown -R ec2-user /microservice\n",
              "echo 'export NODE_ENV=production' >> /home/ec2-user/.bashrc\n",
              "echo 'export AWS_ACCESS_KEY_ID=", { "Ref": "AWSAccessKeyId" }, "' >> /home/ec2-user/.bashrc\n",
              "echo 'export AWS_SECRET_ACCESS_KEY=", { "Ref": "AWSSecretAccessKeyId" }, "' >> /home/ec2-user/.bashrc\n",
              "echo '", { "Ref": "Bashrc" }, "' >> /home/ec2-user/.bashrc\n",
              "runuser -l ec2-user -c 'naught start /microservice/current/index.js'\n",

              "/opt/aws/bin/cfn-signal -e $? ",
              "         --stack ", {
                "Ref": "AWS::StackName"
              },
              "         --resource WebServerGroup ",
              "         --region ", {
                "Ref": "AWS::Region"
              }, "\n"
            ]]
          }
        }
      }
    },

    "ElasticLoadBalancer": {
      "Type": "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties": {
        "AvailabilityZones": {
          "Fn::GetAZs": ""
        },
        "CrossZone": "true",
        "Listeners": [{
          "LoadBalancerPort": "80",
          "InstancePort": {
            "Ref": "MicroservicePort"
          },
          "Protocol": "HTTP"
        }],
        "HealthCheck": {
          "Target": "HTTP:5000/",
          "HealthyThreshold": "3",
          "UnhealthyThreshold": "5",
          "Interval": "30",
          "Timeout": "5"
        },
        "Tags": [{
          "Key": "Microservice",
          "Value": {
            "Ref": "Microservice"
          }
        }, {
          "Key": "Purpose",
          "Value": "Microservice"
        }, {
          "Key": "MicroserviceApiVersion",
          "Value": {
            "Ref": "MicroserviceApiVersion"
          }
        }, {
          "Key": "Environment",
          "Value": {
            "Ref": "Environment"
          }
        }, {
          "Key": "Name",
          "Value": {
            "Ref": "Microservice"
          }
        }]
      }
    },

    "InstanceSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Enable SSH access and HTTP from the load balancer only",
        "SecurityGroupIngress": [{
          "IpProtocol": "tcp",
          "FromPort": "22",
          "ToPort": "22",
          "CidrIp": "0.0.0.0/0"
        }, {
          "IpProtocol": "tcp",
          "FromPort": {
            "Ref": "MicroservicePort"
          },
          "ToPort": {
            "Ref": "MicroservicePort"
          },
          "CidrIp": "0.0.0.0/0"
        }]
      }
    }
  },

  "Outputs": {
    "URL": {
      "Description": "The URL of the website",
      "Value": {
        "Fn::Join": ["", ["http://", {
          "Fn::GetAtt": ["ElasticLoadBalancer", "DNSName"]
        }]]
      }
    }
  }
}
